{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": [
            "arn:aws:iam::{{ aws_account_number }}:role/{{ env_id }}-gitactions-admin",
            "arn:aws:iam::{{ aws_account_number }}:role/tf_automation"
            ]
      },
      "Action": "*",
      "Resource": "*"
    },
	{
      "Effect": "Allow",
      "Principal": {
        "AWS": [
            "arn:aws:iam::{{ aws_account_number }}:role/{{ env_id }}-openidl-apps",
	        "arn:aws:iam::{{ aws_account_number }}:role/{{ env_id }}-baf-automation"
			]
      },
      "Action": [
		"secretsmanager:GetSecretValue",
		"secretsmanager:DescribeSecret",
		"secretsmanager:GetRandomPassword",
		"secretsmanager:List*"
	  ],
      "Resource": "*"
    },
    {
        "Effect": "Deny",
        "Principal": "*",
        "Action": "*",
        "Resource": "*",
        "Condition": {
		    "StringNotLike": {
			    "aws:PrincipalArn": [
			        "arn:aws:iam::{{ aws_account_number }}:root",
			        "arn:aws:iam::{{ aws_account_number }}:role/{{ env_id }}-gitactions-admin",
                    "arn:aws:iam::{{ aws_account_number }}:role/tf_automation",
				    "arn:aws:iam::{{ aws_account_number }}:role/{{ env_id }}-openidl-apps",
				    "arn:aws:iam::{{ aws_account_number }}:role/{{ env_id }}-baf-automation"
				]
			}
		}
    }
  ]
}